<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HostelFix - Report a Problem</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #111111 40%, #0e3960 100%);
            color: #fff;
            overflow-x: hidden;
            padding-top: 60px; /* Adjust padding for fixed navbar */
            height: 100vh;
            overflow-y: auto; /* Allow vertical scrolling */
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: rgba(0, 0, 0, 0.6);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 100;
        }

        .navbar .logo img {
            height: 40px;
            margin-right: -10px;
            vertical-align: middle;
        }

        .navbar .logo span {
            font-size: 24px;
            font-weight: bold;
            color: #cf799e;
            vertical-align: middle;
        }

        .navbar ul {
            list-style: none;
            display: flex;
            gap: 20px;
        }

        .navbar ul li {
            display: inline-block;
        }

        .navbar ul li a {
            text-decoration: none;
            color: #fff;
            font-size: 18px;
            padding: 8px 15px;
            transition: 0.3s;
        }

        .navbar ul li a:hover {
            background-color: #b88fe7;
            border-radius: 5px;
        }

        .container {
            padding: 20px;
        }

        h1 {
            text-align: center;
            margin-bottom: 20px;
        }

        .form-container {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            overflow-y: auto;
            max-height: 40vh;
        }

        label {
            display: block;
            margin-bottom: 10px;
            font-weight: bold;
            color: #ffcc00;
        }

        input, textarea {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: none;
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
            font-size: 16px;
        }

        input:focus, textarea:focus {
            outline: none;
            background-color: rgba(255, 255, 255, 0.3);
            box-shadow: 0px 0px 5px #ffcc00;
        }

        .btn {
            padding: 10px 20px;
            background-color: #cf799e;
            color: white;
            font-size: 18px;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .btn:hover {
            background-color: #b88fe7;
        }

        .problem-list {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            overflow-y: auto;
            max-height: 40vh;
        }

        .problem-item {
            background-color: rgba(255, 255, 255, 0.2);
            padding: 15px;
            margin-bottom: 10px;
            border-radius: 8px;
        }

        .problem-item p {
            margin: 5px 0;
            font-size: 14px;
        }

        .problem-item span {
            font-weight: bold;
            color: #b88fe7;
        }

        .problem-item select {
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
            border-radius: 5px;
            padding: 5px;
        }

        .problem-item select:focus {
            outline: none;
            background-color: rgba(255, 255, 255, 0.3);
            box-shadow: 0px 0px 5px #ffcc00;
        }

        .search-container {
            display: flex;
            gap: 10px;
        }

        .search-container input {
            flex: 1;
            padding: 10px;
            border-radius: 5px;
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
            font-size: 16px;
            border: none;
        }

        .search-container input:focus {
            outline: none;
            background-color: rgba(255, 255, 255, 0.3);
            box-shadow: 0px 0px 5px #ffcc00;
        }

        .filter-container {
            background-color: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            margin-top: 10px;
        }

        .filter-container select {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: none;
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
            font-size: 16px;
        }

    </style>
</head>

<body>

    <!-- Navbar -->
    <div class="navbar">
        <div class="logo">
            <a href="home1" style="text-decoration: none; color: inherit;">
                <img src="my-logo-url.jpeg" alt="Logo">
                <span>HostelFix</span>
            </a>
        </div>
        <ul>
            <li><a href="lostandfound">Lost & Found</a></li>
            <li><a href="reportproblem">Report a Problem</a></li>
            <li><a href="profile1">Profile</a></li>
            <li><a href="messages">Messages</a></li>
        </ul>
    </div>

    <div class="container">
        <h1>Report a Problem</h1>

        <div class="form-container">
            <label for="roomNumber">Room Number:</label>
            <input type="text" id="roomNumber" placeholder="Enter your room number">

            <label for="contactInfo">Contact Info:</label>
            <input type="text" id="contactInfo" placeholder="Enter your contact info">

            <label for="problemDescription">Problem Description:</label>
            <textarea id="problemDescription" rows="4" placeholder="Describe the problem..."></textarea>

            <button class="btn" id="submitProblem">Submit Problem</button>
        </div>

        <div class="search-container">
            <input type="text" id="searchInput" placeholder="Search problems...">
        </div>

        <div class="filter-container">
            <label for="filter">Filter by Status:</label>
            <select id="filter">
                <option value="all">All</option>
                <option value="pending">Pending</option>
                <option value="resolved">Resolved</option>
            </select>
        </div>

        <div class="problem-list" id="problemList">
            <!-- Problems will be dynamically added here -->
        </div>
    </div>

    <script>
        document.getElementById('submitProblem').onclick = function () {
            const roomNumber = document.getElementById('roomNumber').value;
            const contactInfo = document.getElementById('contactInfo').value;
            const description = document.getElementById('problemDescription').value;

            if (roomNumber && contactInfo && description) {
                const problemItem = document.createElement('div');
                problemItem.className = 'problem-item';
                problemItem.innerHTML = `
                    <p><span>Room Number:</span> ${roomNumber}</p>
                    <p><span>Contact Info:</span> ${contactInfo}</p>
                    <p><span>Description:</span> ${description}</p>
                    <p><span>Status:</span> <select onchange="updateStatus(this)">
                        <option value="pending">Pending</option>
                        <option value="resolved">Resolved</option>
                    </select></p>
                `;

                document.getElementById('problemList').appendChild(problemItem);
            } else {
                alert("Please fill all fields!");
            }
        };

        function updateStatus(selectElement) {
            const status = selectElement.value;
            alert("Problem status updated to: " + status);
        }

        document.getElementById('searchInput').oninput = function () {
            const filter = this.value.toLowerCase();
            const problems = document.querySelectorAll('.problem-item');

            problems.forEach(problem => {
                const text = problem.innerText.toLowerCase();
                problem.style.display = text.includes(filter) ? '' : 'none';
            });
        };
    </script>

</body>

</html>
