<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HostelFix - Messages</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@300;600&display=swap');

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #111111 40%, #0e3960 100%);
            color: #fff;
            overflow-x: hidden;
            padding-top: 60px;
            height: 100vh;
            overflow-y: auto;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background-color: rgba(0, 0, 0, 0.6);
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 100;
        }

        .navbar .logo img {
            height: 40px;
            margin-right: -10px;
            vertical-align: middle;
        }

        .navbar .logo span {
            font-size: 24px;
            font-weight: bold;
            color: #cf799e;
            vertical-align: middle;
        }

        .navbar ul {
            list-style: none;
            display: flex;
            gap: 20px;
        }

        .navbar ul li {
            display: inline-block;
        }

        .navbar ul li a {
            text-decoration: none;
            color: #fff;
            font-size: 18px;
            padding: 8px 15px;
            transition: 0.3s;
        }

        .navbar ul li a:hover {
            background-color: #b88fe7;
            border-radius: 5px;
        }

        .container {
            padding: 20px;
            padding-top: 80px; /* To avoid overlapping with the navbar */
        }

        .announcements {
            background-color: rgba(255, 255, 255, 0.15);
            padding: 15px;
            border-radius: 10px;
            margin-bottom: 20px;
        }

        .chat-box {
            background-color: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            max-height: 600px;
            overflow-y: auto;
            padding: 15px;
            margin-bottom: 20px;
        }

        .message {
            margin-bottom: 10px;
            display: flex;
            flex-direction: column;
        }

        .message p {
            padding: 10px;
            border-radius: 10px;
            max-width: 75%;
            position: relative;
        }

        .message .sender {
            align-self: flex-end;
            background-color: #cf799e;
            color: white;
        }

        .message .receiver {
            align-self: flex-start;
            background-color: #333;
            color: white;
        }

        .input-container {
            display: flex;
            margin-top: 10px;
        }

        .input-container input {
            flex-grow: 1;
            padding: 10px;
            border-radius: 5px;
            border: none;
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
        }

        .input-container button {
            background-color: #cf799e;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
            margin-left: 10px;
        }

        .input-container button:hover {
            background-color: #b88fe7;
        }
    </style>
</head>

<body>
    <div class="navbar">
        <div class="logo">
            <a href="home1" style="text-decoration: none; color: inherit;">
                <img src="my-logo-url.jpeg" alt="Logo">
                <span>HostelFix</span>
            </a>
        </div>
        <ul>
            <li><a href="lostandfound">Lost & Found</a></li>
            <li><a href="reportproblem">Report a Problem</a></li>
            <li><a href="profile1">Profile</a></li>
            <li><a href="message1">Messages</a></li>
        </ul>
    </div>

    <div class="container">
        <div class="announcements">
            <h2>ChatBox</h2>
            <p>Welcome to the messaging app! You can now chat with the management team and report issues.</p>
        </div>

        <div class="chat-box" id="chatBox">
            <!-- Messages will be displayed here -->
        </div>

        <div class="input-container">
            <input type="text" id="messageInput" placeholder="Type your message here..." onkeydown="sendMessage(event)">
            <button onclick="sendMessage()">Send</button>
        </div>
    </div>

    <script>
        const chatBox = document.getElementById('chatBox');

        function sendMessage(event) {
            if (event && event.key !== "Enter" && !event.target.matches("button")) return; // Check if Enter key was pressed

            const messageInput = document.getElementById('messageInput');
            const messageText = messageInput.value.trim();

            if (messageText) {
                const messageDiv = document.createElement('div');
                messageDiv.classList.add('message');
                const senderMessage = document.createElement('p');
                senderMessage.classList.add('sender');
                senderMessage.textContent = messageText;
                messageDiv.appendChild(senderMessage);
                chatBox.appendChild(messageDiv);
                messageInput.value = '';
                chatBox.scrollTop = chatBox.scrollHeight; // Scroll to the bottom
            }
        }
    </script>
</body>

</html>
